<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-mapping PUBLIC 
                  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
                  "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package ="com.ideas2it.model">
    <class name="com.ideas2it.model.Employee" table="employee">

        <id name="employeeId" column = "id" type="string"/>    

        <property name = "employeeName" column = "name" type = "string"/>
        <property name = "employeeDepartment" column = "department" type= "string"/>
        <property name = "employeePhoneNumber" column = "phone_number" type= "string"/>
        <property name = "employeeDateOfBirth" column = "dob" type= "string"/>
        <property name = "employeeEmail" column = "email" type= "string"/>
        <property name = "employeeRole" column = "role" type= "string"/>
        <property name = "employeeGender" column = "gender" type= "string"/>
        <property name = "createdAt" column = "created_at" type= "string"/>
        <property name = "modifiedAt" column= "modified_at" type= "string"/>

        <bag name = "leaveRecords" cascade = "all">
            <key column = "employee_id"/>
            <one-to-many class="com.ideas2it.model.LeaveRecords"/>
        </bag>
    </class>
</hibernate-mapping>